  <div style="width:80%; margin:0 auto;">
    <h2>
      Edit challenge
    </h2>

    <form action="/modify_challenge/<%= @the_challenge.id %>"  method="post" enctype="multipart/form-data">
      <div>
        <label for="starting_time_box">
          Starting time
        </label>

        <input type="datetime-local" id="starting_time_box" name="query_starting_time" value="<%= @the_challenge.starting_time %>">
      </div>

      <div>
        <label for="ending_time_box">
          Ending time
        </label>

        <input type="datetime-local" id="ending_time_box" name="query_ending_time" value="<%= @the_challenge.ending_time %>">
      </div>

      <div>
        <label for="challenge_name_box">
          Challenge name
        </label>

        <input type="text" id="challenge_name_box" name="query_challenge_name" value="<%= @the_challenge.challenge_name %>">
      </div>

      <div>
        <label for="challenge_image_box">
          Challenge image
        </label>

        <input type="file" id="challenge_image_box" name="query_challenge_image" value="<%= @the_challenge.challenge_image %>">
      </div>

      <div>
        <label for="removal_policy_box">
          Removal policy
        </label>

        <input type="text" id="removal_policy_box" name="query_removal_policy" value="<%= @the_challenge.removal_policy %>">
      </div>
      <ul>
        <li>
          1: No week will be removed from the final score
        </li>
        <li>
          2: Worst week will be removed from the final score
        </li>
      </ul>

      <div>
        <label for="new_user_policy_box">
          New user policy
        </label>

        <input type="text" id="new_user_policy_box" name="query_new_user_policy" value="<%= @the_challenge.new_user_policy %>">
      </div>
      <ul>
        <li>
          1: Only admins can add new participants
        </li>
        <li>
          2: New participants cannot be added
        </li>
      </ul>


      <div>
        <label for="penalty_policy_box">
          Penalty policy
        </label>

        <input type="text" id="penalty_policy_box" name="query_penalty_policy" value="<%= @the_challenge.penalty_policy %>">
      </div>
      <ul>
        <li>
          1: No penalties
        </li>
        <li>
          2: If minimum workout is not met, a penalty applies
        </li>
      </ul>

      <div>
        <label for="workout_perday_policy_box">
          Workout per week policy
        </label>

        <input type="text" id="workout_perday_policy_box" name="query_workout_perday_policy" value="<%= @the_challenge.workout_perday_policy %>">
      </div>
      <p> Minimum workout sessions per week required</p>

      <div>
        <label for="workout_criteria_box">
          Workout criteria
        </label>

        <input type="text" id="workout_criteria_box" name="query_workout_criteria" value="<%= @the_challenge.workout_criteria %>">
      </div>
      <ul>
        <li>
          1: Standard: 30 min or 300 calories
        </li>
        <li>
          2: Brutal: 1 hour or 600 calories
        </li>
      </ul>

      <div>
        <label for="prize_policy_box">
          Prize policy
        </label>

        <textarea id="prize_policy_box" name="query_prize_policy"><%= @the_challenge.prize_policy %></textarea>
      </div>

      <div>
        <label for="challenge_handle_box">
          Challenge handle
        </label>

        <input type="text" id="challenge_handle_box" name="query_challenge_handle" value="<%= @the_challenge.challenge_handle %>">
      </div>

      <div>
        <label for="number_of_teams_box">
          Number of teams
        </label>

        <input type="text" id="number_of_teams_box" name="query_number_of_teams" value="<%= @the_challenge.number_of_teams %>">
      </div>

      <div>
        <label for="challenge_type_box">
          Challenge type
        </label>

        <input type="text" id="challenge_type_box" name="query_challenge_type" value="<%= @the_challenge.challenge_type %>">
      </div>
         <ul>
        <li>
          1: Team's battle
        </li>
        <li>
          2: Duel
        </li>
        <li>
          3: Shadow fight
        </li>
      </ul>

      <button class = "button">
        Update challenge
      </button>
    </form>

      <hr>
  <a href="/challenges/<%= @the_challenge.challenge_handle %>"> Go back</a>
  </div>
