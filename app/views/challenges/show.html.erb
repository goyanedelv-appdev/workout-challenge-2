<style>
  .gtext {
      color: white;
      font-family: "Helvetica";
  }

  .pwrap {
    word-break: break-all;
    white-space: normal;
  }

    .gcomment {
      color: black;
      font-family: "Helvetica";
  }

</style>

<div  style="width:80%; margin:0 auto;">
  <div>
    <h1>
        #<%= @the_challenge.challenge_handle %> feed
    </h1>

    <table width="400px">
      <tr>
        <p>
          💪 <%= @the_challenge.challenge_name %>
        </p>
      </tr>
      
      <tr>
        <p>
          🏆 <%= @the_challenge.prize_policy %>
        </p>
      </tr>
      <tr bgcolor="royalblue">
        <td class="gtext" align="center" >
          <a href="/challenges/<%= @the_challenge.challenge_handle %>/edit" style="color:white;"> Edit </a>
        </td>
        <td class="gtext" align="center">
          <a href="/challenges/<%= @the_challenge.challenge_handle %>/stats" style="color:white;"> Stats </a>
        </td>
        <td class="gtext" align="center">
          <a href="/challenges/<%= @the_challenge.challenge_handle %>/rules" style="color:white;"> Rules </a>
        </td>
        <td class="gtext" align="center">
          <a href="/challenges/<%= @the_challenge.challenge_handle %>/invite" style="color:white;"> Invite </a>
        </td>
        <td class="gtext" align="center">
          <a href="/challenges/<%= @the_challenge.challenge_handle %>/teams" style="color:white;"> Teams </a>
        </td>
      </tr>
    </table>


  </div>


<hr>

  <table>
    <% @photoworkouts.each do |workout| %>
      <!--<div style="width:80%; margin:0 auto;"> -->
        <tr>
          <p></p>
        </tr>
        <table width="400px" >

          <tr bgcolor="royalblue">
            <td align="left" class="gtext">
              @<%= workout.user.username%>
            </td>

            <td align="right" class="gtext">
              <%= time_ago_in_words(workout.created_at) %> ago | <%= workout.likes_count%>

              <% if workout.likes_count == 0%>
                <a href="/photoworkouts/<%=@the_challenge.challenge_handle%>/<%=workout.id%>/add_like"> ❤️</a>
              <% elsif workout.likes_count < 5%>
                <a href="/photoworkouts/<%=@the_challenge.challenge_handle%>/<%=workout.id%>/add_like"> 💪</a>
              <% elsif workout.likes_count < 10%>
                <a href="/photoworkouts/<%=@the_challenge.challenge_handle%>/<%=workout.id%>/add_like"> 🦾</a>
              <% else %>
                <a href="/photoworkouts/<%=@the_challenge.challenge_handle%>/<%=workout.id%>/add_like"> 🔥</a>
              <% end%>
            </td>
          </tr>

        </table>

        <tr>
          <img src="<%= workout.photo_locator %>" loading="lazy" width="400px">
        </tr>
        <table width="400px" >
          <tr >
            <td align="left" class="gcomment">
            <p class="pwrap">
              💬<%= workout.caption%>
            </p>
            </td>
          </tr>
        </table>
      <!--</div>-->
    <% end %>

  </table>

</div>

<a href="/challenges/<%= @the_challenge.challenge_handle%>/new" class="kc_fab_main_btn">💪</a>

