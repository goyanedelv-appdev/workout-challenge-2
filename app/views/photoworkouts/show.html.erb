<style>
  .gtext {
      color: white;
      font-family: "Helvetica";
  }

  .pwrap {
    word-break: break-all;
    white-space: normal;
  }

    .gcomment {
      color: black;
      font-family: "Helvetica";
  }

</style>
<div style="width:90%; margin:0 auto;">
  <table>

      <!--<div style="width:80%; margin:0 auto;"> -->
        <tr>
          <p></p>
        </tr>
        <table width="380px" >

          <tr bgcolor="royalblue">
            <td align="left" class="gtext">
              @<%= @workout.user.username%>
            </td>

            <td align="right" class="gtext">
              <%= time_ago_in_words(@workout.created_at) %> ago | <%= @workout.likes_count%>

              <% if @workout.likes_count == 0%>
                <a href="/photoworkouts/<%=@the_challenge.challenge_handle%>/<%=@workout.id%>/add_like"> ❤️</a>
              <% elsif @workout.likes_count < 5%>
                <a href="/photoworkouts/<%=@the_challenge.challenge_handle%>/<%=@workout.id%>/add_like"> 💪</a>
              <% elsif @workout.likes_count < 10%>
                <a href="/photoworkouts/<%=@the_challenge.challenge_handle%>/<%=@workout.id%>/add_like"> 🦾</a>
              <% else %>
                <a href="/photoworkouts/<%=@the_challenge.challenge_handle%>/<%=@workout.id%>/add_like"> 🔥</a>
              <% end%>
            </td>
          </tr>

        </table>

        <tr>
          <img src="<%= @workout.photo_locator %>" loading="lazy" width="380px"></a>
        </tr>
        <table width="380px" >
          <tr >
            <td align="left" class="gcomment">
            <p class="pwrap">
              💬<%= @workout.caption%>
            </p>
            </td>
          </tr>
          <tr >
            <td align="left" class="gcomment">
            <p class="pwrap">
              🔥 <%= @workout.calories%> calories
              
            </p>
            </td>
          </tr>
          <tr >
            <td align="left" class="gcomment">
            <p class="pwrap">
              🏋️ Main exercise: <%= @workout.main_exercise%> 
              
            </p>
            </td>
          </tr>
        </table>
      <!--</div>-->

  </table>

<% if @workout.user_id == @current_user.id %>
      <p class="solid">
      <a href="/delete_photoworkout/<%= @workout.id%>"> Delete workout </a>
    </p>
<% end %>

<hr>


  <a href="/challenges/<%= @the_challenge.challenge_handle %>"> Go back</a>
</div>

