<div>
  <div>
    <h1>
      List of all photoworkouts
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new photoworkout
    </h2>

    <form action="/insert_photoworkout" method="post">
      <div>
        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="3"></textarea>
      </div>

      <div>
        <label for="challenge_id_box">
          Challenge
        </label>

        <input type="text" id="challenge_id_box" name="query_challenge_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count">
      </div>

      <div>
        <label for="photo_locator_box">
          Photo locator
        </label>

        <input type="text" id="photo_locator_box" name="query_photo_locator">
      </div>

      <div>
        <label for="calories_box">
          Calories
        </label>

        <input type="text" id="calories_box" name="query_calories">
      </div>

      <div>
        <label for="main_exercise_box">
          Main exercise
        </label>

        <input type="text" id="main_exercise_box" name="query_main_exercise">
      </div>

      <button>
        Create photoworkout
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Caption
        </th>

        <th>
          Challenge
        </th>

        <th>
          User
        </th>

        <th>
          Likes count
        </th>

        <th>
          Photo locator
        </th>

        <th>
          Calories
        </th>

        <th>
          Main exercise
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photoworkouts.each do |a_photoworkout| %>
      <tr>
        <td>
          <%= a_photoworkout.id %>
        </td>

        <td>
          <%= a_photoworkout.caption %>
        </td>

        <td>
          <%= a_photoworkout.challenge_id %>
        </td>

        <td>
          <%= a_photoworkout.user_id %>
        </td>

        <td>
          <%= a_photoworkout.likes_count %>
        </td>

        <td>
          <%= a_photoworkout.photo_locator %>
        </td>

        <td>
          <%= a_photoworkout.calories %>
        </td>

        <td>
          <%= a_photoworkout.main_exercise %>
        </td>

        <td>
          <%= time_ago_in_words(a_photoworkout.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photoworkout.updated_at) %> ago
        </td>

        <td>
          <a href="/photoworkouts/<%= a_photoworkout.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
