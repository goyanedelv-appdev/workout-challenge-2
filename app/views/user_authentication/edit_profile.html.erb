<style>
  .user {
    display: inline-block;
    width: 100px;
    height: 100px;
    border-radius: 50%;

    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
  }

  .one {
    background-image: url("<%= @current_user.profile_picture %>");
    border: solid;
  }

</style>

<div style="width:80%; margin:0 auto;" >

  <table>
    <tr>
      <td>
        <div class="user one"> </div>
      </td>
      <td>
        <h2>
            Hello, <%= @current_user.username %>!
        </h2>
        <p>
          ‚≠ê <%= @current_user.bio %>
        </p>
      <td>
    </tr>
  </table>

  <h2>
      Edit User Account
  </h2>

  <div>

    <form action="/modify_user" method="post" enctype="multipart/form-data">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
      <!--<div>
        <label for="is_premium_box">Is premium</label>
        <input id="is_premium_box" name="query_is_premium" type="checkbox" value="1" <%= "checked" if @current_user.is_premium %>>
      </div>-->
      <div>
        <label for="profile_picture_box">Profile picture</label>
        <input type="file" id="profile_picture_box" name="query_profile_picture" >
      </div>
      <div>
        <label for="bio_box">Bio</label>
        <textarea id="bio_box" name="query_bio" rows="3"><%= @current_user.bio %></textarea> 
      </div>
      <div>
        <label for="username_box">Username</label>
        <input id="username_box" name="query_username" value="<%= @current_user.username %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button class="button"> 
        Update account
      </button>
    </form>
          <hr>
  <a href="/challenges/"> Go back</a>
  </div>
</div>
