<div>
  <div>
    <h1>
      List of all privileges
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new privilege
    </h2>

    <form action="/insert_privilege" method="post">
      <div>
        <label for="challenge_id_box">
          Challenge
        </label>

        <input type="text" id="challenge_id_box" name="query_challenge_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create privilege
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Challenge
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_privileges.each do |a_privilege| %>
      <tr>
        <td>
          <%= a_privilege.id %>
        </td>

        <td>
          <%= a_privilege.challenge_id %>
        </td>

        <td>
          <%= a_privilege.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_privilege.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_privilege.updated_at) %> ago
        </td>

        <td>
          <a href="/privileges/<%= a_privilege.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
